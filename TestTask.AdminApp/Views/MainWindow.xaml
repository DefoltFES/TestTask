<Window x:Class="TestTask.AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask.AdminApp"
        mc:Ignorable="d"
        Title="Админ панель" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border  BorderThickness="1" >
            <StackPanel Grid.Column="0">
                <Button x:Name="Generate" BorderBrush="Aqua" Background="Transparent"  Margin="10" Content="Сгенерировать данные"></Button>
                <Button x:Name="Favorite" BorderBrush="Aqua" Background="Transparent" Margin="10" Content="Избранное" Cursor="Hand"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
